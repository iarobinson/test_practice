<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 offset-md-3 mt-3 mb-3">

      <% unless notice.nil? %>
        <div class="alert alert-primary" role="alert">
          <%= notice %>
        </div>
      <% end %>
      <div class="card">
        <div class="card-body">
          <h1><%= @test.title %></h1>
          <p>Description:</p>
          <p><%= @test.description %></p>
        </div>


        <% if @test.sections.size > 0 %>
          <div class="list-group list-group-flush">
            <div class="list-group-item">
              <strong>Sections:</strong>
            </div>
            <% @test.sections.each do |section| %>
              <%= link_to section, class: "list-group-item list-group-item-action" do %>
                <div class="row">
                  <div class="col-8">
                    <strong><%= section.title %></strong>
                  </div>
                  <div class="col-4">
                    <p class="float-right">
                      <%= pluralize section.questions.count, 'question' %>
                    </p>
                  </div>
                </div>
                <div class="row">
                  <div class="col-12">
                    <p><%= section.description %></p>
                    <p><%= section.duration_descrption %></p>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>

      <%= link_to 'Take this Test', new_experience_path( test: @test ), class: "btn btn-block btn-success my-2" %>
      <%= link_to 'Edit', edit_test_path(@test), class: "btn btn-block btn-primary my-2" %>
      <%= link_to 'All Tests', tests_path, class: "btn btn-block btn-primary my-2" %>

    </div>
  </div>
</div>
