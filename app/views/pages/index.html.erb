<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2 mt-3 mb-3">

      <div class="card">
        <div class="card-body">
          <div class="text-center">
            <h1>Test Practice</h1>
            <p>An application to help you study for tests.</p>
            <%= link_to "Add a Your Own Test", new_test_path, class: "btn btn-block btn-success" %>
          </div>
        </div>
      </div>

      <% if @tests.size > 0 %>
        <% @tests.each do |test| %>
          <div class="card my-3">
            <div class="card-body">
              <h3><%= test.title %> - <%= test.acronym %></h3>
              <p>Inspect: <%= test.inspect %></p>
              <p>Section Count: <%= test.sections.count %></p>
              <%= link_to "View this Test", test, class: "btn btn-block btn-primary" %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
